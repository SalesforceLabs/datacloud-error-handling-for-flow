<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <description>Sends a notification when an Activation fails.</description>
    <environments>Default</environments>
    <interviewLabel>Data Cloud: Activation Failure Notifications {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Data Cloud: Activation Failure Notifications</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
        <filterLogic>or</filterLogic>
        <filters>
            <field>ActivationStatus</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>ERROR</stringValue>
            </value>
        </filters>
        <filters>
            <field>LastPublishStatus</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>ERROR</stringValue>
            </value>
        </filters>
        <filters>
            <field>LastPublishStatus</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>PARTNER_ERROR</stringValue>
            </value>
        </filters>
        <filters>
            <field>LastPublishStatus</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>SEGMENT_ERROR</stringValue>
            </value>
        </filters>
        <object>MarketSegmentActivation</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <scheduledPaths>
            <connector>
                <targetReference>Send_Notification</targetReference>
            </connector>
            <pathType>AsyncAfterCommit</pathType>
        </scheduledPaths>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <name>Send_Notification</name>
        <label>Send Notification</label>
        <locationX>308</locationX>
        <locationY>276</locationY>
        <flowName>Data_Cloud_Failure_Notifications_Sub_Flow</flowName>
        <inputAssignments>
            <name>customNotificationName</name>
            <value>
                <stringValue>Data_Cloud</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>recordId</name>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>recordName</name>
            <value>
                <elementReference>$Record.Name</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>recordStatus</name>
            <value>
                <elementReference>$Record.LastPublishStatus</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>recordType</name>
            <value>
                <stringValue>Activation</stringValue>
            </value>
        </inputAssignments>
    </subflows>
</Flow>
